---
import { Image } from 'astro:assets';

interface Props {
    id: string;
    imageUrl?: ImageMetadata;
    imageAlt?: string;
}

const { id, imageUrl, imageAlt } = Astro.props;
---

<div class="modal" data-modal-id={id} role="dialog" aria-modal="true">
    <div class="modal-backdrop"></div>
    <div class="modal-container">
        {imageUrl && (
            <Image 
                src={imageUrl} 
                alt={imageAlt || ''} 
                width={800}
                quality={100}
                class="modal-image"
                loading="eager"
            />
        )}
    </div>
</div>

<style>
    .modal {
        position: fixed;
        inset: 0;
        z-index: var(--z-modal);
        display: none;
    }
    .modal.visible {
        display: flex;
    }
    .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(40, 39, 38, 0.85); /* or use var(--color-ink-primary) with opacity */
        z-index: 1;
    }
    .modal-container {
        position: relative;
        z-index: 2;
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
    }
    .modal-image {
        max-width: 90vw;
        max-height: 90vh;
        box-shadow: var(--shadow-lg);
        border-radius: var(--border-radius-lg);
        pointer-events: auto;
    }
</style> 