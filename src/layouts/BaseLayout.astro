---
import '../styles/global.scss';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title?: string;
}

const { title } = Astro.props;
const siteName = "Andrew Washuta";
const pageTitle = title ? `${title} â€“ ${siteName}` : siteName;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={title ? `${title} | ${siteName}` : siteName} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
    <script src="/src/scripts/modal.js" type="module" is:inline></script>
  </body>
</html>

<style lang="scss">

  // Section Styles for Index Layout
  section {
    display: grid;
    grid-template-columns: [start] repeat(4, 1fr) [end];
    gap: var(--size-lg);
    scroll-margin-top: var(--size-xxl);
    width: 100%;

    > * {
      grid-column: start / end;
    }

    // Image styles
    img {
      border-radius: var(--border-radius-sm);
      border: 1px solid var(--color-edge-subtle);
      background-color: var(--color-white);
    }

    // Content Layout
    > .content {
      display: flex;
      flex-direction: column;
      gap: var(--size-sm);
    }

    // Grid Utilities
    .half-width {
      grid-column: span 2;
    }

    .quarter-width {
      grid-column: span 1;
    }

    // Lists
    ul {
      width: 100%;
      padding-left: var(--size-md);
    
      li {
        padding-left: var(--size-xxs);
      }
    }
  }
</style>