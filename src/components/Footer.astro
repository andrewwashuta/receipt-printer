<style lang="scss">
@use '../styles/global.scss' as *;

  .footer {
    font-size: var(--font-size-sm);
    margin: var(--size-xxl) auto var(--size-lg);
    max-width: 700px;
    
    @include mobile {
      max-width: calc(700px + (var(--size-lg) * 2));
      padding: 0 var(--size-lg);
    }
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: top;
    width: 100%;
    padding: var(--size-lg) 0 0;
    border-top: 1px solid var(--color-edge-primary);
  }

  .footer-left {
    display: flex;
    gap: var(--size-xs);
    color: var(--color-ink-subtle);
    
    @include mobile {
      flex-direction: column;
      gap: var(--size-xxxs);
    }
  }

</style> 