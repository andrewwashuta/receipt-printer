---
import { Image } from 'astro:assets';
import Icon from './Icon.astro';

interface Props {
    id: string;
    imageUrl?: ImageMetadata;
    imageAlt?: string;
    title?: string;
    caption?: string;
}

const { id, imageUrl, imageAlt, caption } = Astro.props;
---

<div class="modal" data-modal-id={id} role="dialog" aria-modal="true">
    <div class="modal-overlay"></div>
    <div class="modal-content">
        <button class="modal-close" aria-label="Close modal">
            <Icon name="close-large" color="var(--color-white)" />
        </button>
        
        <div class="modal-body">
            {imageUrl && (
                <Image 
                    src={imageUrl} 
                    alt={imageAlt || ''} 
                    width={800}
                    quality={100}
                    class="modal-image"
                    loading="eager"
                />
            )}
            <slot />
        </div>
    </div>
</div>

<style>
    .modal {
        position: fixed;
        inset: 0;
        z-index: 1000;
        display: none;
        opacity: 0;
        transform: scale(0.95);
        transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    }

    .modal.visible {
        display: block;
        opacity: 1;
        transform: scale(1);
    }

    .modal-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(var(--size-md));
        opacity: 0;
        transition: opacity 0.2s ease-out;
    }

    .modal.visible .modal-overlay {
        opacity: 1;
    }

    .modal-content {
        position: absolute;
        background-color: white;
        max-width: 1200px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.95);
        padding: 1rem;
        border-radius: 4px;
        z-index: 1001;
        opacity: 0;
        transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    }

    .modal.visible .modal-content {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }

    .modal-close {
        position: fixed;
        right: var(--size-lg);
        top: var(--size-lg);
        background: var(--color-ink-subtle);
        border: none;
        border-radius: var(--size-xs);
        padding: var(--size-xs);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index:1002;
    }

    .modal-image {
        width: 100%;
        height: auto;
    }

    .modal-body {
        /* Add any additional styling for the content area */
    }
</style> 