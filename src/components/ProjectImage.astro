---
import { Image } from 'astro:assets';
import Modal from "./Modal.astro";

interface Props {
  src: any;
  alt: string;
  showCaption?: boolean;
}

const { src, alt, showCaption = false } = Astro.props;
const modalId = `modal-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="project-image">
  <a href="#" class="modal-trigger" data-modal-id={modalId} tabindex="0">
    <Image 
      src={src}
      alt={alt}
      quality={100}
      format="webp"
    />
  </a>
  <Modal 
    id={modalId}
    imageUrl={src}
    imageAlt={alt}
  />
  {showCaption && (
    <div class="image-caption">
      <slot />
    </div>
  )}
</div>

<style>
.project-image {
  display: flex;
  flex-direction: column;
  gap: var(--size-sm);
  width: 100%;
}

.project-image img {
  width: 100%;
  height: auto;
  display: block;
  padding: 2px;
  border-radius: var(--border-radius-sm);
  border: 1px solid var(--color-edge-subtle);
  background-color: var(--color-white);
}

.image-caption {
  font-family: var(--font-display);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  color: var(--color-ink-subtle);
  line-height: 1.4;
}
</style> 