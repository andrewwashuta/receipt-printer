---
import { Image } from 'astro:assets';
import Modal from "./Modal.astro";

interface Props {
  src: any;
  alt: string;
  showCaption?: boolean;
  mediaType?: 'image' | 'video';
  backgroundColor?: string;
  gradientStartColor?: string;
  gradientEndColor?: string;
  hero?: boolean;
  eager?: boolean;


}

const { src, alt, showCaption = false, mediaType = 'image', backgroundColor, gradientStartColor, gradientEndColor, hero = false, eager = false } = Astro.props;
const modalId = `modal-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`project-media ${hero ? 'hero-media' : ''}`}>
  {mediaType === 'image' ? (
    <div class="media-wrapper modal-trigger" data-modal-id={modalId} tabindex="0">
      {(backgroundColor || (gradientStartColor && gradientEndColor)) ? (
        <div class="inner-background" style={backgroundColor ? `background-color: ${backgroundColor}` : `background: linear-gradient(to bottom, ${gradientStartColor}, ${gradientEndColor})`}>
          <Image 
            src={src}
            alt={alt}
          />
        </div>
      ) : (
        <Image 
          src={src}
          alt={alt}
        />
      )}
    </div>
  ) : (
    <div class="media-wrapper video-wrapper">
      {(backgroundColor || (gradientStartColor && gradientEndColor)) ? (
        <div class="inner-background" style={backgroundColor ? `background-color: ${backgroundColor}` : `background: linear-gradient(to bottom, ${gradientStartColor}, ${gradientEndColor})`}>
          <video 
            src={src}
            preload="auto"
            muted
            playsinline
            autoplay
            loop
            controls
            class="video-player"
          />
        </div>
      ) : (
        <video 
          src={src}
          preload="auto"
          muted
          playsinline
          autoplay
          loop
          controls
          class="video-player"
        />
      )}
    </div>
  )}
  
  {mediaType === 'image' && (
    <Modal 
      id={modalId}
      imageUrl={src}
      imageAlt={alt}
    />
  )}
  
  {showCaption && (
    <figcaption class="media-caption">
      <slot />
    </figcaption>
  )}
</div>

<style lang="scss">
@use '../styles/global.scss' as *;

.project-media {
  display: flex;
  flex-direction: column;
  gap: var(--size-sm);
  width: 100%;
  margin: var(--size-xl) 0;
}

.media-wrapper {
  padding: 2px;
  border-radius: var(--border-radius-md);
  border: 1px solid var(--color-edge-subtle);
  background-color: var(--color-white);
}

.media-wrapper:hover,
.media-wrapper:focus {
  outline: none;
}

.project-media img,
.project-media video {
  width: 100%;
  height: auto;
  display: block;
  border-radius: calc(var(--border-radius-sm) + 2px);
}

/* Inner background container for colored backgrounds */
.inner-background {
  padding: var(--size-xl);
  border-radius: calc(var(--border-radius-sm) + 2px);
  width: 100%;
  height: 100%;
  overflow: hidden;

  @include mobile {
    padding: var(--size-md);
  }
}

/* Apply border-radius to interior image/video when background is present */
.inner-background img,
.inner-background video {
  border-radius: var(--border-radius-sm);
  box-shadow: 150px 50px 250px 0 rgba(40, 39, 38, 0.12);
  box-shadow: 0px 16px 24px 0 rgba(40, 39, 38, 0.08);
}

/* Video-specific styles */
.video-wrapper {
  position: relative;
}

.video-player {
  transition: all var(--transition-default);
  width: 100%;
  height: auto;
}

/* Simple approach: hide controls by default, show on hover/focus */
.video-player::-webkit-media-controls {
  opacity: 0;
  transition: opacity var(--transition-default);
}

.video-wrapper:hover .video-player::-webkit-media-controls,
.video-wrapper:focus-within .video-player::-webkit-media-controls {
  opacity: 1;
}

.media-caption {
  font-family: var(--font-display);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  color: var(--color-ink-subtle);
  line-height: 1.4;
  padding: 0 var(--size-lg);

  @include mobile {
    padding: 0;
  }
}

/* Remove margins for hero media */
.project-media.hero-media {
  margin: 0;
}

/* Remove bottom margin for last ProjectMedia in a section */
:global(section .project-media:last-child) {
  margin-bottom: 0 !important;
}
</style> 