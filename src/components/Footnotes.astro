---
import { getFootnotesInOrder } from '../utils/footnotes';

interface Props {
  footnotes: Array<{ id: string; text: string }>;
}

const { footnotes } = Astro.props;
const numberedFootnotes = getFootnotesInOrder(footnotes);
---

{footnotes.length > 0 && (
  <footer class="project-footnotes">
    <ol>
      {numberedFootnotes.map((footnote) => (
        <li>
          <a href={`#footnote-ref-${footnote.id}`} id={`footnote-${footnote.id}`} class="footnote-backref">{footnote.number}</a>
          {footnote.text}
        </li>
      ))}
    </ol>
  </footer>
)}

<style lang="scss">
  @use '../styles/global.scss' as *;

.project-footnotes {
  width: 100%;
  padding: var(--size-xl) var(--size-lg) 0;
  border-top: 1px solid var(--color-edge-subtle);
  font-size: var(--font-size-sm);

  @include mobile {
    padding: var(--size-xl) 0 0;
  }

  ol {
    list-style: none;
    padding-left: 0;
  }

  li {
    margin-bottom: var(--size-md);
    position: relative;
    padding-left: var(--size-sm);
  }

  a.footnote-backref {
    position: absolute;
    padding: 0 var(--size-xxxs);
    left: 0;
    color: var(--color-ink-subtle);
    text-decoration: none;
    font-size: var(--font-size-xs);
    vertical-align: super;

    &:hover {
      color: var(--color-accent-dark);
    }

    &:focus {
      background-color: var(--color-accent-light);
      color: var(--color-accent-dark) !important;
    }
  }
}

:global(.footnote-ref) {
  color: var(--color-ink-subtle);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
  font-size: var(--font-size-xs);
  vertical-align: super;
  line-height: 0;

  &::before {
    content: "[";
  }

  &::after {
    content: "]";
  }

  &:hover {
    color: var(--color-accent-dark);
  }

  &:focus {
    background-color: var(--color-accent-light);
    color: var(--color-accent-dark) !important;
    border-radius: 2px;
  }
}
</style> 