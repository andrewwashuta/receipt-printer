---
import { Image } from 'astro:assets';
import Modal from "./Modal.astro";

interface Props {
  src: any;
  alt: string;
  showCaption?: boolean;
  mediaType?: 'image' | 'video';
  backgroundColor?: string;
  hero?: boolean;
}

const { src, alt, showCaption = false, mediaType = 'image', backgroundColor, hero = false } = Astro.props;
const modalId = `modal-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`project-media ${hero ? 'hero-media' : ''}`}>
  <div class="media-wrapper modal-trigger" data-modal-id={modalId} tabindex="0">
    {backgroundColor ? (
      <div class="inner-background" style={`background-color: ${backgroundColor}`}>
        {mediaType === 'image' ? (
          <Image 
            src={src}
            alt={alt}
            quality={100}
          />
        ) : (
          <video 
            src={src}
            preload="metadata"
            muted
            playsinline
            loop
            autoplay
          />
        )}
      </div>
    ) : (
      <>
        {mediaType === 'image' ? (
          <Image 
            src={src}
            alt={alt}
            quality={100}
          />
        ) : (
          <video 
            src={src}
            preload="metadata"
            muted
            playsinline
            loop
            autoplay
          />
        )}
      </>
    )}
  </div>
  <Modal 
    id={modalId}
    imageUrl={src}
    imageAlt={alt}
    mediaType={mediaType}
  />
  {showCaption && (
    <div class="media-caption">
      <slot />
    </div>
  )}
</div>

<style>
.project-media {
  display: flex;
  flex-direction: column;
  gap: var(--size-sm);
  width: 100%;
  margin: var(--size-xl) 0;
}

.media-wrapper {
  padding: 2px;
  border-radius: var(--border-radius-md);
  border: 1px solid var(--color-edge-subtle);
  background-color: var(--color-white);
}

.project-media img,
.project-media video {
  width: 100%;
  height: auto;
  display: block;
  border-radius: calc(var(--border-radius-sm) + 2px);
}

/* Inner background container for colored backgrounds */
.inner-background {
  padding: var(--size-md);
  border-radius: calc(var(--border-radius-sm) + 2px);
  width: 100%;
  height: 100%;
}

/* Apply border-radius to interior image/video when background is present */
.inner-background img,
.inner-background video {
  border-radius: var(--border-radius-sm);
}

.media-caption {
  font-family: var(--font-display);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  color: var(--color-ink-subtle);
  line-height: 1.4;
}

/* Remove margins for hero media */
.project-media.hero-media {
  margin: 0;
}
</style> 