---
import '../styles/global.scss';
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: string;
}

const { title, description, image, type = 'website' } = Astro.props;
const siteName = "Andrew Washuta";
const pageTitle = title ? `${title} | ${siteName}` : siteName;
const pageDescription = description || "Lead Experience Designer specializing in design systems and analytics platforms. Currently at 84.51Â°, focused on building trust through thoughtful design.";
const pageImage = image || "/og.jpg";
const siteUrl = "https://andrew.cv";
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <meta name="description" content={pageDescription} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- OpenGraph tags -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:image" content={`${siteUrl}${pageImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={`${siteUrl}${pageImage}`} />
    
    <!-- Additional meta tags -->
    <meta name="author" content={siteName} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={currentUrl} />
    
    <!-- Font preloading to prevent FOUT -->
    <link rel="preload" href="/fonts/mnkybananagrotesk-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/mnkybananagrotesk-medium.woff2" as="font" type="font/woff2" crossorigin>
    
    <title>{pageTitle}</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
    <Footer />
    <script src="/modal.js" is:inline></script>
    <Analytics />
  </body>
</html>

<style lang="scss">

  // Section Styles for Index Layout
  section {
    display: grid;
    grid-template-columns: [start] repeat(4, 1fr) [end];
    gap: var(--size-lg);
    scroll-margin-top: var(--size-xxl);
    width: 100%;

    > * {
      grid-column: start / end;
    }

    // Image styles
    img {
      border-radius: var(--border-radius-sm);
      border: 1px solid var(--color-edge-subtle);
      background-color: var(--color-white);
    }

    // Content Layout
    > .content {
      display: flex;
      flex-direction: column;
      gap: var(--size-sm);
    }

    // Grid Utilities
    .half-width {
      grid-column: span 2;
    }

    .quarter-width {
      grid-column: span 1;
    }

    // Lists
    ul {
      width: 100%;
      padding-left: var(--size-md);
    
      li {
        padding-left: var(--size-xxs);
      }
    }
  }

</style>